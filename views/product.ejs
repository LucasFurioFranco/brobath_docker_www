<%
const static_img = "http://static.brobath.lucasfuriofranco.com.br/img/main/";
%>

<!doctype html>
<html>
  <head>
  
    <meta charset="utf-8">
    <meta name="robots" content="noindex">
    
    <title>WWW Product</title>
   
    <script>
      window.dataLayer = window.dataLaywe || [];
      window.dataLayer.push({
        event:           "page_data",
        page_type:       "details",
        product_details: <%- JSON.stringify(product_details, null, 2) %>
      })
    </script>
    

    <style>
			header {
				background-color: green;
			}

			.flex-container {
				display: flex;
			}

			.flex-child {
				flex: 1;
				border: 2px solid yellow;
			}

			.flex-child:first-child {
				margin-right: 20px;
			}
    </style>

  </head>
  
  
  
  <body>

    <header>
			<div class="top flex-container">
        <div class="left flex-child">
					<a href="#logo">
						<img src="<%- static_img %>logo.png">
					</a>
        </div>

        <div class="right flex-child">
					<a href="#sac">SAC</a>
					<a href="#whishlist">Desejos</a>
					<a href="#user_data">Dados de usuário</a>
        </div>
      </div>

      <div class="botton">
				<nav>
					<a href="#home">Home</a>
					<a href="#department">Department</a>
					<a href="#promos">Promoçõesa>
					<input type="text" placeholder="Busca">
					<a href="#search">"Lupa"</a>
					<a href="#bag">"Sacola"</a>

				</nav>
      </div>
    </header>

    <nav></nav>

    <main>
      <% if(product_details.id !== undefined) { %>

        <h1><%- product_details.name %></h1>
        <h2><%- product_details.available ? "Available" : "Unavailable" %></h2>
        <h3>Price: <%- product_details.price %></h3>

      <% } else { %> <!-- Product not found -->

        <h1>Sorry, product not found</h1>
        <h2>A product with this ID was not found on our databases - check for URL malformed</h2>

      <% } %>

    </main>

    <footer></footer>

  </body>
  
</html>
